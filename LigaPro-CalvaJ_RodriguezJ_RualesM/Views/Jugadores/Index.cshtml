@model IEnumerable<LigaPro_CalvaJ_RodriguezJ_RualesM.Models.Jugador>

@{
    ViewData["Title"] = "Jugadores";
}

<header class="bg-success text-white py-4 mb-4 rounded-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="display-4">Jugadores de Liga Pro</h1>
            <a asp-action="Create" class="btn btn-warning btn-lg">
                <i class="bi bi-plus-circle"></i> Nuevo Jugador
            </a>
        </div>
    </div>
</header>

<div class="container">
    <!-- Filtros -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-light">
            <h5 class="m-0 font-weight-bold">Filtros</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label for="equipoFilter" class="form-label">Equipo</label>
                    <select class="form-select" id="equipoFilter">
                        <option selected>Todos los equipos</option>
                        <option>Liga de Quito</option>
                        <option>Barcelona SC</option>
                        <option>Independiente del Valle</option>
                        <option>Emelec</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="posicionFilter" class="form-label">Posición</label>
                    <select class="form-select" id="posicionFilter">
                        <option selected>Todas las posiciones</option>
                        <option>Arquero</option>
                        <option>Defensa</option>
                        <option>Mediocampista</option>
                        <option>Delantero</option>
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="button" class="btn btn-outline-success w-100">
                        <i class="bi bi-search"></i> Filtrar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de jugadores -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-light">
            <h4 class="m-0 font-weight-bold">Listado de Jugadores</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Edad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NumeroCamiseta)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Posicion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Goles)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Asistencias)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Sueldo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Equipo)
                            </th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.Nombre)</strong>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Edad)
                            </td>
                            <td>
                                <span class="badge bg-dark rounded-pill">@Html.DisplayFor(modelItem => item.NumeroCamiseta)</span>
                            </td>
                            <td>
                                @{
                                    string badgeColor = "bg-secondary";
                                    if (item.Posicion == "Arquero") badgeColor = "bg-danger";
                                    if (item.Posicion == "Defensa") badgeColor = "bg-primary";
                                    if (item.Posicion == "Mediocampista") badgeColor = "bg-success";
                                    if (item.Posicion == "Delantero") badgeColor = "bg-warning text-dark";
                                }
                                <span class="badge @badgeColor">@Html.DisplayFor(modelItem => item.Posicion)</span>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Goles)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Asistencias)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sueldo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Equipo.Nombre)
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">
                                        <i class="bi bi-info-circle"></i> Detalles
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

