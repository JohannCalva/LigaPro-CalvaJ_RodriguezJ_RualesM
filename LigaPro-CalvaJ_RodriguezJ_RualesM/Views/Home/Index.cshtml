@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Liga Pro Ecuador</h1>
    <p>Conoce los equipos de la Liga Pro Ecuador!</p>
    <div id="carousel" class="carousel slide">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/ldu.jpg" class="d-block w-100" alt="Liga de Quito">
            </div>
            <div class="carousel-item">
                <img src="~/images/bsc.jpg" class="d-block w-100" alt="Barcelona SC">
            </div>
            <div class="carousel-item">
                <img src="~/images/idv.jpg" class="d-block w-100" alt="Independiente del Valle">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
