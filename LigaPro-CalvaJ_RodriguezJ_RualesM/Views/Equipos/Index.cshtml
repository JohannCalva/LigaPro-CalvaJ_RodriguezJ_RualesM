@model IEnumerable<LigaPro_CalvaJ_RodriguezJ_RualesM.Models.Equipo>

@{
    ViewData["Title"] = "Equipos";
}

<header class="bg-primary text-white py-4 mb-4 rounded-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="display-4">Equipos de Liga Pro</h1>
            <a asp-action="Create" class="btn btn-warning btn-lg">
                <i class="bi bi-plus-circle"></i> Nuevo Equipo
            </a>
        </div>
    </div>
</header>

<div class="container">
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-light">
            <h4 class="m-0 font-weight-bold">Tabla de Posiciones</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Logo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PartidosJugados)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PartidosGanados)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PartidosEmpatados)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PartidosPerdidos)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Puntos)
                            </th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.Nombre)</strong>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Logo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PartidosJugados)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PartidosGanados)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PartidosEmpatados)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PartidosPerdidos)
                            </td>
                            <td>
                                <span class="badge bg-primary rounded-pill">@Html.DisplayFor(modelItem => item.Puntos)</span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">
                                        <i class="bi bi-info-circle"></i> Detalles
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row row-cols-1 row-cols-md-2 g-4">
        <div class="col">
            <div class="card text-bg-light">
                <div class="card-header bg-primary text-white">
                    <h5>Estadísticas</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Visualiza estadísticas detalladas de todos los equipos de Liga Pro Ecuador en esta temporada.</p>
                    <button type="button" class="btn btn-outline-primary">Ver Estadísticas</button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card text-bg-light">
                <div class="card-header bg-warning">
                    <h5>Historial</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Consulta el historial completo de todos los equipos a lo largo de las diferentes temporadas.</p>
                    <button type="button" class="btn btn-outline-warning">Ver Historial</button>
                </div>
            </div>
        </div>
    </div>
</div>